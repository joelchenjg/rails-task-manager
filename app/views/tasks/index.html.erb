<div class="m-3">
<h1>My tasks</h1>
<ul class="d-flex flex-column">
  <% @tasks.each do |task| %>
    <% if task.completed %>
        <li><input class="form-check-input" type="checkbox" value="" checked><%= link_to task.title, task_path(task) %></li>
        <% else %>
        <li><input class="form-check-input" type="checkbox" value=""><%= link_to task.title, task_path(task) %></li>
    <% end %>
    <%= link_to "ðŸ—‘",
            task_path(task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
  <% end %>
</ul>
<%= link_to "Add a new task", new_task_path %>
</div>
